{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "quotemark": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "trailingComma": "all"
  },
  "jsRules": {
    "max-line-length": {
      "options": [100]
    }
  }
}
